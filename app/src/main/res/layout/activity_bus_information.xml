<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:layout_margin="10dp"
    tools:context=".BusInformationActivity">


    <EditText
        android:id="@+id/busNo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your bus number"
        android:inputType="number"
        android:layout_margin="10dp"
        android:padding="5dp"
        />

    <EditText
        android:id="@+id/morningTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Bus Morning time"
        android:inputType="text"
        android:padding="5dp"
        />

    <EditText
        android:id="@+id/eveningTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:padding="5dp"
        android:hint="Enter bus evening time" />

    <EditText
        android:id="@+id/busRoute"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:padding="5dp"
        android:hint="enter start and ending location (route)" />

    <Button
        android:id="@+id/addBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="addBtn"
        android:padding="5dp"
        android:text="add" />
</LinearLayout>