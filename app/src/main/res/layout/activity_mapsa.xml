<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:andriod="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


<fragment xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/map"
    android:name="com.google.android.gms.maps.SupportMapFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MapsActivityA" />

    <LinearLayout
        android:layout_marginTop="-60dp"
        android:layout_width="wrap_content"
        android:layout_gravity="end"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="40dp"
            android:background="@drawable/border"
            android:gravity="center"
            android:onClick="BusNumber123Location"
            android:padding="15dp"
            android:text="Bus NO. 123 "
            android:textColor="@color/dblack"

            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="DriverLocationBtn"
            android:text="Bus No. 789 "
            android:background="@drawable/border"
            android:gravity="center"
            android:textColor="@color/dblack"
            android:padding="15dp"
            android:layout_marginEnd="50dp"

            />
    </LinearLayout>

</LinearLayout>